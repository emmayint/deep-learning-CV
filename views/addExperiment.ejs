        <link href='/stylesheets/style.css' rel='stylesheet'/>
        <link href="/stylesheets/viewexperiment.css" rel="stylesheet">

    </head>
    <body>
        <!-- Navigation Bar -->
        <!-- <div class="container"> -->
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark"> <button aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarNavDropdown" data-toggle="collapse" type="button">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarNavDropdown">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item" style="padding-top:5px;">
                        <a " href=" #" class=" btn btn-primary btn-sm">
                            <i class="fa fa-user"></i>
                            Welcome,
                            <%= uname %>!</a>
                    </li>
                    <li class="nav-item active home">
                        <a class="nav-link" href="/home">Home
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item logout">
                        <form action="/logout" id="form" method="POST">
                            <a class="nav-link" href="/logout" onclick="document.getElementById('form').submit(); return false;">Logout</a>
                        </form>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- </div> -->
        <div class="container">
            <div class="row justify-content-center">
                <div class="account-wall col-md-push-1 col-md-6">

                    <form action="/addExperiment" class="form" enctype="multipart/form-data" method="POST">
                        <h3 class="text-center login-title">
                            <b>Add Experiment</b>
                        </h3>
                        <label for="expTitle">Experiment Title</label>
                        <input autofocus class="form-control" name="expTitle" placeholder="Experiment Title *" required type="text"><br>

                        <label for="expBirthDate">Date of Experiment (Birth Date)
                        </label>
                        <input autofocus class="form-control" name="expBirthDate" required type="date"><br>

                        <label for="expImagingDate">Date of Imaging</label>
                        <input autofocus class="form-control" name="expImagingDate" required type="date"><br>

                        <label for="expAntibody">Antibody Used</label>
                        <input autofocus class="form-control" name="expAntibody" placeholder="Antibody Used" required type="text"><br>

                        <label for="expImage">Experiment Image</label>
                        <input accept="image/*" autofocus multiple name="expImage" required type="file"/>
                        <br>

                        <label for="expDescription">Experiment Description</label>
                        <input autofocus class="form-control" name="expDescription" placeholder="Experiment Description" required type="text"><br>

                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Add Experiment
                        </button>

                    </form>

                </div>

            </div>
        </body>
    </body>
