    <% include partials/home-header %>
    <div class="container">

    <!-- Apply Filter by date  -->
    <div class="row div">
        <div class="col-md-12 btn-group-toggle topmargin">
            <div class="heading toprow">
                <h2>Predictions to be validated
                    <a aria-pressed="true" data-toggle="tooltip" data-placement="bottom" title="Go Back to View Experiments"
                        class="custombtn btn-primary btn-sm" href="/viewExperiment/<%= id %>" role="button">
                        <i class="fas fa-angle-double-left"></i></a>
                </h2>
                <hr class="mt-2 mb-1">
            </div>
        </div>
